<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_upper_part"
    android:background="@drawable/bg_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_progress_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/progress_circles"
        android:visibility="invisible"
        android:layout_marginBottom="50dp"/>


    <ImageView
        android:id="@+id/tv_psu"
        android:layout_above="@+id/img_progress_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/psu_btech_text"
        android:padding="5dp"/>


    <com.prepp.customviews.CustomTextView
        android:id="@+id/tv_center_msg"
        android:layout_above="@+id/tv_psu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/white"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        app:fontName="@string/roboto_regular"
        android:text="@string/intro_screen_msg"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_intro"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_center_msg"/>

</RelativeLayout>
