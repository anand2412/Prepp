<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icn_verification" />

            <LinearLayout
                android:id="@+id/lyt_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_border"
                android:fitsSystemWindows="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <com.prepp.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:background="@color/colorPrimary"
                    android:padding="15dp"
                    android:text="Phone Verification"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text"
                    app:fontname="@string/roboto_regular" />

                <com.prepp.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Please verify your phone to view ranks and collect rewards"
                    android:textColor="@color/blue_black"
                    android:textSize="@dimen/large_text"
                    app:fontname="@string/roboto_regular" />

                <com.prepp.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:text="Phone Number"
                    android:textColor="@color/blue_black"
                    android:textSize="@dimen/normal_text"
                    app:fontname="@string/roboto_regular" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp">

                    <com.prepp.customviews.CustomTextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edt_number"
                        android:layout_alignParentLeft="true"
                        android:text="+91 - "
                        android:textColor="@color/hint"
                        android:textSize="20sp"
                        app:fontname="@string/roboto_regular" />

                    <com.prepp.customviews.CustomEditText
                        android:id="@+id/edt_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingLeft="55dp"
                        android:textColor="@color/blue_black"
                        android:textSize="20sp"
                        app:fontname="@string/roboto_bold" />

                </RelativeLayout>

                <com.prepp.customviews.CustomButton
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:background="@color/sign_button_bg"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text"
                    app:fontname="@string/roboto_bold" />


                <com.prepp.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Enter Verification Code"
                    android:textColor="@color/blue_black"
                    android:textSize="@dimen/normal_text"
                    app:fontname="@string/roboto_regular" />


                <com.prepp.customviews.CustomEditText
                    android:id="@+id/edttxt_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/blue_black"
                    android:textSize="20sp"
                    app:fontname="@string/roboto_bold" />


                <com.prepp.customviews.CustomButton
                    android:id="@+id/btn_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:background="@color/sign_button_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="VERIFY"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text"
                    app:fontname="@string/roboto_bold" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>